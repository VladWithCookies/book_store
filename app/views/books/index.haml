%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %a.navbar-brand{:href => "/"} The Bookstore
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %a{:href => "/"}
            HOME
            %span.sr-only (current)
        %li.active
          %a{:href => "/books"} SHOP
      %span.glyphicon.glyphicon-shopping-cart.cart CART: (EMPTY)
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            %a{:href => "#"} Settings
          %li
            %a{:href => "#"} Orders
          %li= link_to "Logout", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Sign up", new_user_registration_path
          %li= link_to "Login", new_user_session_path

.wrapper
  .header SHOP
  .row
    .col-md-9
      .col-md-4
        -@books.each do |book|
          .thumbnail
            = link_to book_path(book) do
              %img{:src => "#{book.image}", :alt => ""}
                %h3= book.title
                %b= "$#{book.price}"

    .col-md-3
      %h4.category-header SHOP BY CATEGORIES
      .list-group
        - @categories.each do |category|
          %a.list-group-item{:href => ""}= category.title

  .pagination-container
    %ul.pagination
      %li.active 
        %a{:href => ""} 1
      %li 
        %a{:href => ""} 2
      %li 
        %a{:href => ""} Next
      %li 
        %a{:href => ""} Last 


