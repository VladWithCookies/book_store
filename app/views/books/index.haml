= render "layouts/nav_bar"

.wrapper
  - if @category_title 
    .breadcrumbs
      %a{:href => "/"} Home
      >>
      %a{:href => "/books"} Shop
      >>
      = @category_title
    .header= "CATEGORIES - #{@category_title}" 
  - else
    .header SHOP

  .row
    .col-md-9
      -@books.each do |book|
        .col-md-4
          .thumbnail
            = link_to book_path(book) do
              %img{:src => "#{book.image}", :alt => ""}
                %h3= book.title
                %b= "$#{book.price}"

    .col-md-3
      %h4.category-header SHOP BY CATEGORIES
      .list-group
        - @categories.each do |category|         
          %a.list-group-item{:href => "/categories/#{category.title}"}= category.title

  .pagination-container
    %ul.pagination
      %li.active 
        %a{:href => ""} 1
      %li 
        %a{:href => ""} 2
      %li 
        %a{:href => ""} Next
      %li 
        %a{:href => ""} Last 


