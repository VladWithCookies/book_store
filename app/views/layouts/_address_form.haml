- if address.nil?
  =f.text_field :firstname, placeholder: t('placeholder.firstname')
  =f.text_field :lastname, placeholder: t('placeholder.lastname')
  =f.text_field :street, placeholder: t('placeholder.street')
  =f.text_field :city, placeholder: t('placeholder.city')
  =f.select :country, @countries
  =f.text_field :zipcode, placeholder: "Zip"
  =f.telephone_field :phone, placeholder: t('placeholder.phone')  
- else 
  =f.text_field :firstname, placeholder: t('placeholder.firstname'), value: address.firstname 
  =f.text_field :lastname, placeholder: t('placeholder.lastname'), value: address.lastname
  =f.text_field :street, placeholder: t('placeholder.street'), value: address.street
  =f.text_field :city, placeholder: t('placeholder.city'), value: address.city
  =f.select :country, @countries
  =f.text_field :zipcode, placeholder: "Zip", value: address.zipcode
  =f.telephone_field :phone, placeholder: t('placeholder.phone'), value: address.phone 
%button.btn.btn-default= t('button.save')